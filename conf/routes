# Home page
GET     /                           controllers.ScriptController.index

GET     /scripts                    controllers.ScriptController.scripts

GET     /scripts/:id                controllers.ScriptController.script(id)

POST    /scripts                    controllers.ScriptController.saveScript

GET     /actor/:id                  controllers.ActorController.createActor(id)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file)


